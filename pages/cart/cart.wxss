.container {
    padding: 20px;
  }
  
  .cart-title {
    font-size: 24px;
    font-weight: bold;
    text-align: center;
    margin-bottom: 20px;
  }
  
  .cart-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 20px;
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 5px;
  }
  
  .item-image {
    width: 100px;
    height: 100px;
    margin-bottom: 10px;
  }
  
  .item-info {
    text-align: center;
  }
  
  .item-name {
    font-size: 16px;
    margin-bottom: 5px;
  }
  
  .item-price {
    font-size: 14px;
    color: #f56c6c;
  }
  
  .cart-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 20px;
  }
  
  .total-price {
    font-size: 18px;
    font-weight: bold;
  }
  
  .empty-cart {
    text-align: center;
    font-size: 16px;
    color: #999;
    padding: 20px;
  }