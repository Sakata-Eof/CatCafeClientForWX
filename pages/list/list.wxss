/* 全局容器 */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
}

/* 订单历史 */
.order-history {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 订单卡片 */
.order-card {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 订单头部 */
.order-header {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

/* 商品列表 */
.order-products {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 单个商品项 */
.product-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 20rpx;
  padding: 10rpx 0;
  border-top: 1rpx solid #f0f0f0;
}

/* 商品详情 */
.product-details {
  flex: 1; /* 优先占用空间 */
  font-size: 26rpx;
  color: #333;
  display: flex;
  flex-direction: column;
  gap: 5rpx;
}

/* 商品图片 */
.product-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  background-color: #f0f0f0; /* 图片未加载时的背景色 */
}

/* 订单状态 */
.order-status {
  margin-top: 10rpx;
  font-size: 26rpx;
  color: #999;
}

/* 订单底部 */
.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}

/* 总价文本 */
.order-total {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

/* 支付按钮 */
.pay-button {
  padding: 10rpx 20rpx;
  background-color: #007aff;
  color: #fff;
  border-radius: 10rpx;
  font-size: 26rpx;
  border: none;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.pay-button:active {
  background-color: #005bbb;
}

/* 无订单提示 */
.no-orders {
  text-align: center;
  font-size: 28rpx;
  color: #999;
  margin-top: 40rpx;
}
