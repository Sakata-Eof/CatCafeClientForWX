/* 全局布局 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background: linear-gradient(135deg, #769FCD, #D6E6F2);
  color: #fff;
  font-family: Arial, sans-serif;
}

/* 用户信息部分 */
.user-section {
  text-align: center;
}

.user-id {
  font-size: 18px;
  margin-bottom: 20px;
  font-weight: bold;
  color: #035241;
}

/* 登录和退出按钮通用样式 */
button {
  padding: 10px 20px;
  border: none;
  border-radius: 20px;
  font-size: 16px;
  cursor: pointer;
  outline: none;
  transition: all 0.3s ease-in-out;
}

/* 登录按钮样式 */
.login-button {
  background-color: #4caf50;
  color: #fff;
}

.login-button:hover {
  background-color: #45a049;
  transform: scale(1.05);
}

/* 退出按钮样式 */
.logout-button {
  background-color: #eb756c;
  color: #fff;
}

.logout-button:hover {
  background-color: #e53935;
  transform: scale(1.05);
}
