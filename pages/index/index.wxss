/* 全局容器 */
.index-container {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
}

/* 背景容器 */
.background {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #769FCD, #D6E6F2); /* 渐变背景 */
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 按钮容器 */
.button-container {
  display: flex;
  flex-direction: row; /* 左右排列 */
  gap: 30rpx; /* 按钮间距 */
  padding: 20rpx;
}

/* 按钮样式 */
.action-button {
  flex: 1; /* 平均占用空间，确保大小一致 */
  max-width: 40%; /* 限制最大宽度 */
  background-color: white;
  color: #333;
  font-size: 32rpx;
  padding: 20rpx 10rpx;
  border-radius: 20rpx;
  text-align: center;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
  border: none;
  transition: all 0.3s ease-in-out;
}

.action-button:active {
  background-color: #f0f0f0; /* 按下时按钮变浅 */
  transform: scale(0.95); /* 按下时轻微缩小 */
}
