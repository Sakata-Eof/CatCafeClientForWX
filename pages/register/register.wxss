.radio-group {
  margin: 20px 0;
  display: flex;
  justify-content: space-around;
  padding-top: 10px;
  border-top: 1px solid #ddd;
}

.radio-item {
  display: flex;
  align-items: center;
}

.radio-label {
  margin-left: 5px;
  font-size: 16px;
  color: #333;
}

button[type="primary"] {
  width: 100%;
  padding: 12px;
  background-color: #1aad19;
  color: white;
  font-size: 16px;
  text-align: center;
  border: none;
  border-radius: 5px;
  box-sizing: border-box;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

button[type="primary"]:hover {
  background-color: #179b16;
}