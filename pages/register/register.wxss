/* app.wxss */
.container {
  padding: 20px;
  max-width: 500px;
  margin: 20px auto;
  background-color: #fff;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  border-radius: 10px;
}

.title {
  font-size: 24px;
  text-align: center;
  margin-bottom: 25px;
  color: #333;
  font-weight: bold;
}

.input-group {
  margin-bottom: 20px;
}

.input-group label {
  display: block;
  margin-bottom: 5px;
  font-size: 14px;
  color: #666;
}

.input-group input {
  width: 100%;
  padding: 20px;
  font-size: 20px;  /* 增加字体 */
  

  border: 1px solid #ccc;
  border-radius: 1px;
  box-sizing: border-box;
}

